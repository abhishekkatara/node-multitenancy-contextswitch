{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src",
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "checkJs": true,
    "allowUmdGlobalAccess": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "*": ["customTypes/*"],
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@routes/*": ["routes/*"],
      "@interfaces/*": ["interfaces/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "lib": ["es2015"],
  "include": ["src"],
  "exclude": ["src/customTypes"]
}
